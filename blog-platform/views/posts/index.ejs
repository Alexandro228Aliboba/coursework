<!-- Страница списка постов пользователя -->
<div class="d-flex justify-content-between align-items-center mb-3">
	<h2><%= title %></h2>
	<div>
		<a href="/posts/new" class="btn btn-primary">Новый пост</a>
	</div>
</div>
<ul class="list-group">
	<% posts.forEach(p => { %>
	<li class="list-group-item d-flex justify-content-between align-items-center">
		<!-- Ссылка на просмотр поста -->
		<a href="/posts/<%= p.id %>"><%= p.title %></a>

		<!-- Блок управления: редактировать + удалить -->
    <% if (showControls) { %>
			<div class="d-flex">
				<!-- Кнопка редактирования -->
				<a
					href="/posts/<%= p.id %>/edit"
					class="btn btn-outline-primary btn-sm me-2"
				>
					Редактировать
				</a>

				<!-- Форма удаления -->
				<form
					action="/posts/<%= p.id %>/delete"
					method="post"
					onsubmit="return confirm('Удалить пост «<%= p.title %>»?');"
					style="display: inline"
				>
					<button type="submit" class="btn btn-outline-danger btn-sm">
						Удалить
					</button>
				</form>
			</div>
		<% } %>
	</li>
	<% }) %>
</ul>
